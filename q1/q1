java script code:
a = ["john", "mike", "susan", "matt", "joe", "larry", "ken", "samantha", "jenny", "Sara", "henry"];
for (i=0;i<a.length;i++){
  if((i+1)%3===0)
  {
  console.log(a[i].toUpperCase());
  }
  else console.log(a[i]);
}

